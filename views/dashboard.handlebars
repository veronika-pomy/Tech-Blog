{{#each user.posts}} 
<section class="container">
  <div class="post">
    <h4>{{title}}</h4>
    <h5>{{format_date createdAt}}</h5>
    <h5>{{content}}</h5>
    <button class="btn-update" data-id="{{id}}" onclick ="updateButtonHandler (event)">Update</button>
    <button class="btn-delete" data-id="{{id}}" onclick ="deleteButtonHandler (event)">Delete</button>

      {{!-- how to render input field conditionally?  --}}
      <section class="update-post">
          <form class="form-post-update">
            <div class="div-post-update">
              <input class="form-input" type="text" id="post-content-update-{{id}}" name="post-content-update" />
            </div>
          </form>
      </section>
  </div>
{{/each}}

{{!-- section for creating new post --}}
<section class="create-post">
    <form class="form-post">
      <div class="div-post">
        <input class="form-input" type="text" id="post-name" name="post-name" />
        <input class="form-input" type="text" id="post-content" name="post-content" />
      </div>
      <div class="div-post">
        <button type="submit" class="btn btn-post">Create a new post</button>
      </div>
    </form>
</section>

<script src="./js/post.js"></script>